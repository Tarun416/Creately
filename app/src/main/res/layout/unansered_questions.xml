<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="@dimen/margin8"
    android:layout_marginRight="@dimen/margin8"
    android:layout_marginTop="8dp"
    android:padding="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/timecontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/grey">


            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="visible"
                tools:text="15 jan 1993" />

        </LinearLayout>

        <ImageView
            android:id="@+id/profiileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_marginTop="@dimen/margin16"
            tools:src="@mipmap/app_icon" />


        <TextView
            android:id="@+id/questionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginTop="@dimen/margin16"
            android:layout_toLeftOf="@+id/timecontainer"
            android:layout_toRightOf="@+id/profiileImage"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/text_title_color"
            android:textStyle="normal"
            tools:text="how to use recycler view in android?" />


        <TextView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionDescription"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginTop="@dimen/margin8"
            android:layout_toRightOf="@+id/profiileImage"
            android:maxLines="2"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            tools:text="#android #java" />


        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tags"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginTop="@dimen/margin8"
            android:layout_toRightOf="@+id/profiileImage"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            tools:text="Rating : 3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginBottom="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginTop="@dimen/margin16"
            android:gravity="center"
            android:weightSum="2">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin16"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:src="@drawable/heart_outline"
                android:textColor="@android:color/white" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin16"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:src="@drawable/ic_share_black"
                android:textColor="@android:color/white" />


        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>